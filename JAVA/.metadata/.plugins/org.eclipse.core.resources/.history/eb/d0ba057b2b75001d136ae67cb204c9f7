package com.lec.ex02_output;
import java.io.*;

/*
	OutputStream
	
	FileOutputStream, PrintStream, BufferedOutputStream, DataOutputStream은 모두 
	OutputStream를 상속한다.
	
	OutputStream의 주요 메서드
*/
public class WriteMain {
	public static void main(String[] args) throws Exception {
		// 1. write(int byte)
		OutputStream os=new FileOutputStream("src/com/lec/ex01_input/news.txt");
		byte[] data="BlackPinkInYourAREA".getBytes();
		// System.out.println(data); // [B@626b2d4a
		for(int i=0; i<data.length; i++) {
			os.write(data[i]);
		}
		os.flush();
		os.close();
		
		
		// 2. 
		os=new FileOutputStream("src/com/lec/ex01_input/news.txt");
		data="123123123".getBytes();
		os.write(data);
		os.flush();
		os.close();
		
		
		// 3. 
		os=new FileOutputStream("src/com/lec/ex01_input/news.txt");
		data="123123123".getBytes();
		os.write(data,1,3);
		os.flush();
		os.close();
	}
}