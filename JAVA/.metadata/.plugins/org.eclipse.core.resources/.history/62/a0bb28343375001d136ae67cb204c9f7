package com.lec.ex05_file;
import java.io.File;
import java.net.URI;
import java.net.URISyntaxException;

public class FileMain {
	public static void main(String[] args) throws Exception {
		File dir=new File("C:\\Users\\ezen\\Desktop\\abcde");
		File file1=new File("C:\\Users\\ezen\\Desktop\\abcde\\abcde1.txt");
		File file2=new File("C:\\Users\\ezen\\Desktop\\abcde\\\\abcde2.txt");
		
		// uri로 생성하는 방법
		File file3=new File(new URI("file:\\C:\\Users\\ezen\\Desktop\\abcde\\abcde3.txt"));
		
		if(dir.exists()==false) {dir.mkdir();}
	}
}