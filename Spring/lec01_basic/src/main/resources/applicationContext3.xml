<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="ss" class="com.lec.basic.poly3.SamsungTV">
		<constructor-arg index="0" ref="apple"/>  <!-- 생성자 통해서 주입 -->
		<constructor-arg index="1" value="27000"/>
	</bean>
	
	<bean id="sony" class="com.lec.basic.poly3.SonnySpeaker"></bean>
	<bean id="apple" class="com.lec.basic.poly3.AppleSpeaker"></bean>
</beans>
