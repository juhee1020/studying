<%@page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!--
(el은 변수 등을 좀 더 간단히 적으려고!)
if문, for문 등을 좀 더 간단하게 만들기 위해 나온게 > jstl

-->
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<h1>표현식 사용하는 경우!</h1>
<%	if(true){%>
		<h2>${"참"}</h2>
<%	}else{%>
		<h2>${"거짓"}</h2>	
<%	}%>

<h1>JSTL</h1>
<!-- jstl ▼ -->
<c:if test="true">
	<h2>${ "참입니다" }</h2>
</c:if>


</body>
</html>