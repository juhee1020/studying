package com.lec.web.dao;
import java.sql.*;
import java.util.List;

import com.lec.web.jdbc.JDBCUtil;
import com.lec.web.model.Message;

public class MessageDAO {

	// singleton
	private MessageDAO() {};
	private static MessageDAO messageDAO = new MessageDAO();
	public static MessageDAO getInstance() { return messageDAO; }
	
	public void makeMessage() {}
	public int selectCount(Connection conn) {
		Statement stmt=null;
		ResultSet rs=null;
		String sql="select count(*) from guestbook_message";
		
		try {
			stmt=conn.createStatement();
			rs=stmt.executeQuery(sql);
			rs.next();
			return rs.getInt(1); // 
		}catch(Exception e) {return 0;}
		finally{
			JDBCUtil.close(null, stmt, rs);
			// conn은 클로즈시키지않았다. (또 쓸거라서?)
		}
	}
	public List<Message> selectList(Connection conn, int start, int end) {
		//select * from ~~;
		//order by message_id_desc~~
		PreparedStatement pstmt=null;
		ResultSet rs=null;
		String sql="select * from guestbook_message "+"order by message_id desc limit ?,?";
		try {
			pstmt=conn.prepareStatement(sql);
		}catch(Exception e) {return null;}
		finally{
			JDBCUtil.close(null, pstmt, rs);
			// conn은 클로즈시키지않았다. (또 쓸거라서?)
		}
	}
	
	
	
	
	public void insert() {}
	public void select() {}
	public void update() {}
	public void delete() {}
	
}